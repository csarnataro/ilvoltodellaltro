---

const { name, image } = Astro.props;
import "../styles/global.css";
import CardBg from '../assets/card-bg.gif'
---
  <div class="flex flex-col w-56">
  <div class={`rounded w-48 h-48 bg-center bg-cover mx-auto `} style={`background-image: url(${image})`}>
  </div>
    <div class="relative text-center pt-3">
      <h3 class={` text-xl md:text-3xl lg:text-xl text-center absolute w-full mx-auto text-[#273583]`}>
        {name} 
      </h3>
    </div>
  </div>
