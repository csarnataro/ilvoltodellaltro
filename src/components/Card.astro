---

const { event, event: { frontmatter }} = Astro.props;
import "../styles/global.css";
import CardBg from '../assets/card-bg.gif'
import MapMarkerWhite from '../assets/map-marker-white.svg'
import MapMarkerBlue from '../assets/map-marker-blue.svg'
const hasThumb = Boolean(frontmatter.thumb);
const thumbUrl = hasThumb ? frontmatter.thumb : 'card-bg.gif';
const color = hasThumb ? 'text-white' : 'text-[#273583]' ;
const filter = hasThumb ? 'grayscale': '';
const MapMarker = hasThumb ? MapMarkerWhite : MapMarkerBlue;
---
<span class="text-white text-[#273583] hidden"></span>
<a href={event.url} alt={`Scheda evento ${frontmatter.title}`} class={`${color} `}>
  <div class={`rounded w-full h-128 bg-center bg-cover ${filter}`} style={`background-image: url(${thumbUrl})`}>
    <div class="relative min-h-42 text-center">
      <h3 class={` uppercase text-5xl md:text-3xl lg:text-4xl text-center absolute w-full mx-auto bottom-0  ${color}`}>
        {frontmatter.title}

      </h3>
    </div>
    <div class="text-center">
      <MapMarker class="w-5 h-5 inline " />
      {frontmatter.city}
    </div>
    <div class="w-full text-center">
      <div class="uppercase text-lg mt-36">
        {frontmatter.venue}
      </div>
    </div>
    <div class="relative min-h-32 text-center">
      <div class={`font-bold uppercase text-2xl text-center absolute w-full mx-auto bottom-0  ${color}`}>
        {frontmatter.visible_date}

      </div>
    </div>
  </div>
</a>
